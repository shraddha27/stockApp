{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ] // Alias for the 'src' directory
    }
  },
  "include": [
    "src/**/*"
  ], // Files to include in compilation
  "exclude": [
    "node_modules"
  ] // Exclude node_modules from compilation
}